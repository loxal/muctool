# SSL Certificate
ssl_certificate /etc/letsencrypt/live/muctool.de-0001/fullchain.pem;
ssl_certificate_key /etc/letsencrypt/live/muctool.de-0001/privkey.pem;
ssl_trusted_certificate /etc/letsencrypt/live/muctool.de-0001/fullchain.pem;

ssl_session_timeout 1d;
ssl_session_cache shared:SSL:5m;
ssl_session_tickets off;

ssl_protocols TLSv1.2;
ssl_ciphers EECDH+AESGCM:EECDH+AES;
ssl_ecdh_curve secp384r1;
ssl_prefer_server_ciphers on;

ssl_stapling on;
ssl_stapling_verify on;
ssl_buffer_size 4k;

add_header Strict-Transport-Security "max-age=63072000; includeSubdomains; preload";
#add_header X-Frame-Options DENY; # broke an integration test
add_header X-Content-Type-Options nosniff;

#Audit: https://www.ssllabs.com/ssltest/index.html
#Enable HSTS preload, list as HSTS-only site: https://hstspreload.org